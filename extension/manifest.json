{
  "manifest_version": 3,
  "name": "Markdown to LinkedIn Formatter",
  "description": "Converts pasted Markdown to LinkedIn-friendly formatting.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Markdown to LinkedIn Formatter"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
